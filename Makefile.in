SINGUNAME		= @SINGUNAME@
EXEC_EXT		= @EXEC_EXT@
##
## various paths
##
srcdir		= @srcdir@
prefix 		= @prefix@
exec_prefix 	= @exec_prefix@
libdir 		= @libdir@
# program executable goes here
bindir		= @bindir@
# includes are taken from here
includedir	= @includedir@
slibdir		= ${prefix}/LIB
install_bindir  = ${install_prefix}/${SINGUNAME}
install_slibdir = ${install_prefix}/LIB

##
## various programs
##
@SET_MAKE@
CC		= @CC@
CXX		= @CXX@
LEX		= @LEX@
PERL		= @PERL@
BISON		= bison
INSTALL		= @INSTALL@
INSTALL_PROGRAM	= @INSTALL_PROGRAM@ 
INSTALL_DATA	= @INSTALL_DATA@
MKINSTALLDIRS   = ./mkinstalldirs
LN_S		= @LN_S@

##
## compiler and linker options
##
PIPE		= @PIPE@
CFLAGS		= @CFLAGS@ ${PIPE}
CXXFLAGS	= @CXXFLAGS@ ${PIPE}
CXXTEMPLFLAGS	= @CXXTEMPLFLAGS@
CPPFLAGS	= -I${srcdir} @CPPFLAGS@
DEFS		= -DNDEBUG -DOM_NDEBUG -D@SING_UNAME@ @DEFS@
LDFLAGS		= @LDFLAGS@
LD_DYN_FLAGS	= @LD_DYN_FLAGS@
SFLAGS		= @SFLAGS@
SLDFLAGS	= @SLDFLAGS@

LD_LIBC	        = -lc
STATIC_LDFLAGS	= @STATIC_LDFLAGS@
LIBS		= -lm @NEED_LIBS@ 
DL_KERNEL	= @DL_KERNEL@

ifdef LD_STATIC
LDFLAGS  := ${STATIC_LDFLAGS} ${LDFLAGS} 
SING_EXEC = Singular-static
DL_KERNEL =
else
LDFLAGS  := ${LD_DYN_FLAGS} ${LDFLAGS} 
SING_EXEC = Singular
endif

