  if(size(Sp)==2)
  {
    for(int i=1;i<size(Sp[2]);i++)
    {
      s=s+"("+string(Sp[1][i])+","+string(Sp[2][i])+"),";
    }
    s=s+"("+string(Sp[1][i])+","+string(Sp[2][i])+")";
