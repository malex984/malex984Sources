{ "EXAMPLE:"; echo=2;
  ring R=0,(x,y),ds;
  list S=list(ideal(-1/2,-3/10,-1/10,0,1/10,3/10,1/2),intvec(1,2,2,1,2,2,1));
  spprint(S);
  spgeomgenus(S);
}
