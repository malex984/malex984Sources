static proc liftbound(module U,module H,int k,int K)
{
  def R=basering;
  ring S=0,s,ds;
  module U=imap(R,U);
  module H=imap(R,H);
  degBound=k+K+1;
  H=jet(lift(U,H),K);
  degBound=0;
  setring(R);
  return(imap(S,H));
}
