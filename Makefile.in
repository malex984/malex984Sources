#################################################################
###
### Makefile for Singular
###
#################################################################

SHELL		= /bin/sh

##
## version
##
SINGULAR_VERSION	= @SINGULAR_VERSION@
SINGULAR		= @SINGULAR@
SINGUNAME		= @SINGUNAME@  

## 
## various paths
##
srcdir		= @srcdir@
prefix 		= @prefix@
exec_prefix 	= @exec_prefix@
libdir 		= @libdir@
# program executable goes here
bindir		= @bindir@
# includes are taken from here
includedir	= @includedir@

## 
## various programs
##
@SET_MAKE@
CC		= @CC@
CXX		= @CXX@
LEX		= @LEX@
PERL5		= @PERL5@
BISON		= bison
INSTALL		= ./install-sh -c
INSTALL_PROGRAM	= ${INSTALL}
INSTALL_DATA	= ${INSTALL} -m 644
MKINSTALLDIRS   = ./mkinstalldirs
LN_S		= @LN_S@

##
## compiler and linker options
##
PIPE		= @PIPE@
CFLAGS		= @CFLAGS@ ${PIPE} 
CXXFLAGS	= @CXXFLAGS@ ${PIPE} 
CXXTEMPLFLAGS	= @CXXTEMPLFLAGS@
CPPFLAGS	= -I${srcdir} @CPPFLAGS@
DEFS		= -DNDEBUG -D@SING_UNAME@
LDFLAGS		= @LDFLAGS@
LD_DYN_FLAGS	= @LD_DYN_FLAGS@
STATIC_LDFLAGS	= @STATIC_LDFLAGS@
LIBS		= -lm @NEED_LIBS@

##
## End configuration dependend stuff
#################################################################

###
### file sets
###

